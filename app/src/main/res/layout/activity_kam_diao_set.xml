<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="th.ac.up.mct.thaitoneapp.KamDiaoSetActivity"
    android:background="@drawable/foot2">
    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/iconbar"
            android:id="@+id/imageView"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bar_diao"
            android:id="@+id/imageView2" />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp">

    <LinearLayout
        android:orientation="vertical"

        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/KamdiaoMainLayout"></LinearLayout>
    </ScrollView>

</RelativeLayout>
